}

.w-8 {
  width: 16rpx;
}

.h-16 {
  height: 32rpx;
}

.min-w-max {
  min-width: max-content;
}

/* 阴影和圆角 */
.shadow-lg {
  box-shadow: 0 10rpx 15rpx -3rpx rgba(0, 0, 0, 0.1), 0 4rpx 6rpx -2rpx rgba(0, 0, 0, 0.05);
}

.shadow-md {
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.06);
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-md {
  border-radius: 8rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

/* 相对位置 */
.relative {
  position: relative;
}

/* 分类标签 */
.tabs-container {
  white-space: nowrap;
  overflow-x: scroll;
}

.tab {
  display: inline-block;
  padding: 16rpx 32rpx;
  font-weight: 500;
  cursor: pointer;
  border-bottom: 6rpx solid transparent;
}

.tab.active {
  border-color: #569DAA;
  color: #0a2647;
}

/* 贷款产品卡片 */
.loan-item {
  margin-bottom: 24rpx;
  padding: 32rpx;
  background-color: white;
  border-radius: 16rpx;
  border-left: 8rpx solid transparent;
  transition: all 0.3s ease;
}

.loan-item.selected {
  border-left-color: #569DAA;
  background-color: rgba(44, 116, 179, 0.1);
}

.loan-header {
  margin-bottom: 24rpx;
}

.loan-details {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.loan-detail-item {
  display: flex;
  flex-direction: column;
}

.detail-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #111827;
}

.rate-badge {
  display: inline-block;
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 9999rpx;
}

.loan-action {
  text-align: right;
}

.apply-btn {
  background-color: transparent;
  color: #4F46E5;
  font-size: 28rpx;
  padding: 0;
  line-height: normal;
  display: inline;
}

.apply-btn::after {
  border: none;
}

/* 表单样式 */
.application-form {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.5s ease;
}

.application-form.open {
  max-height: 5000rpx;
}

.form-step {
  display: none;
}

.form-step.active {
  display: block;
}

.form-progress .connector {
  position: absolute;
  top: 30rpx;
  height: 4rpx;
  background-color: #E5E7EB;
  z-index: 0;
  width: 100%;
  left: 0;
}

.form-progress .connector.active {
  background-color: #205295;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  color: #374151;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.form-input {
  width: 100%;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
}

.form-textarea {
  width: 100%;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
  height: 120rpx;
}

.next-step, .prev-step {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.picker-content {
  width: 100%;
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  background-color: #ffffff;
}

/* 上传区域样式 */
.upload-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 32rpx;
}

.upload-item {
  border: 2rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 24rpx;
}

.upload-label {
  font-weight: 500;
  color: #374151;
  margin-bottom: 16rpx;
}

.upload-area {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  cursor: pointer;
}

.upload-placeholder {
  font-size: 64rpx;
  color: #9ca3af;
}

.upload-preview {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #4b5563;
  background-color: #f3f4f6;
  border-radius: 8rpx;
  cursor: pointer;
}

/* 确认信息网格 */
.confirm-info-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 16rpx;
}

.confirm-item {
  display: flex;
  gap: 8rpx;
}

/* 协议滚动区域 */
.agreement-scroll {
  height: 240rpx;
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

/* 自定义复选框样式 */
.custom-checkbox {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

/* 成功页面样式 */
.success-page {
  display: none;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.06);
  padding: 48rpx;
}

.success-page.visible {
  display: block;
}

/* 悬浮效果 */
.hover-scale {
  transition: transform 0.3s ease;
}

/* 移除有hover的类 */
.text-light {
  color: #B9EDDD;
}

/* 针对图标的特殊样式 */
.iconfont {
  font-family: "iconfont" !important;
  font-size: inherit;
  font-style: normal;
}

/* 修复按钮样式 */
button {
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
}

button::after {
  display: none;
}

