/* :root equivalent for colors */
page {
  --primary-blue: #0e3c63;
  --secondary-blue: #1e5d94;
  --accent-green: #42c28c;
  --accent-cyan: #4fd8f5;
  --bg-dark: #031929;
  --bg-light: #f8fcff;
  --text-light: #e6f0fa;
  --text-dark: #333;
  --card-bg: #ffffff;
  --section-bg: #f0f4f8; /* Light gray for section backgrounds */
  
  /* 新增颜色变量 */
  --blue-light: #e6f3ff;
  --purple-light: #f3e6ff;
  --green-light: #e6fff0;
  --yellow-light: #fff8e6;
  --red-light: #ffe6e6;
  --orange-light: #fff0e6;
}

