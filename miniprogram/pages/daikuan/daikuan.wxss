/* Flex 布局 */
.flex {
  display: flex;
}

.inline-flex {
  display: inline-flex;
}

.flex-wrap {
  flex-wrap: wrap;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-end {
  justify-content: flex-end;
}

.space-x-6 > view:not(:first-child) {
  margin-left: 48rpx;
}

.space-x-4 > view:not(:first-child) {
  margin-left: 32rpx;
}

.gap-4 {
  gap: 32rpx;
}

.gap-6 {
  gap: 48rpx;
}

.flex-shrink-0 {
  flex-shrink: 0;
}

.flex-col {
  flex-direction: column;
}

/* 网格布局 */
.grid {
  display: grid;
}

.grid-cols-1 {
  grid-template-columns: repeat(1, minmax(0, 1fr));
}

.grid-cols-2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.grid-cols-3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

/* 边框 */
.border-l-4 {
  border-left-width: 8rpx;
  border-left-style: solid;
}

.border-t {
  border-top-width: 2rpx;
  border-top-style: solid;
}

.border-blue-400 {
  border-color: #60a5fa;
}

.border-blue-500 {
  border-color: #3b82f6;
}

.border-green-500 {
