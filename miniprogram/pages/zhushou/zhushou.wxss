/* 全局变量 */
page {
  --primary-blue: #0a2342;
  --secondary-blue: #126872;
  --highlight-blue: #2a93d5;
  --accent-light: #75c9c8;
  --text-light: #e3f6f5;
  background: linear-gradient(135deg, var(--primary-blue) 0%, var(--secondary-blue) 100%);
  color: var(--text-light);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  min-height: 100vh;
}

/* 容器样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.37);
}

.header-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #2a93d5 0%, #75c9c8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon-robot {
  font-size: 48rpx;
  color: white;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 20rpx rgba(117, 201, 200, 0.8);
}

.button-group {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.btn-primary {
  background-color: var(--highlight-blue);
  color: white;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid var(--accent-light);
  color: var(--accent-light);
}

.iconfont {
  display: inline-block;
  margin-right: 10rpx;
}

.icon-setting, .icon-chart-line, .icon-database, .icon-chart-pie, .icon-comments, .icon-user, .icon-send {
  font-family: "Font Awesome 5 Free";
  font-weight: 900;
}

.icon-setting::before { content: "\f013"; }
.icon-chart-line::before { content: "\f201"; }
.icon-database::before { content: "\f1c0"; }
.icon-chart-pie::before { content: "\f200"; }
.icon-comments::before { content: "\f086"; }
.icon-user::before { content: "\f007"; }
.icon-robot::before { content: "\f544"; }
.icon-send::before { content: "\f1d8"; }

/* 主体内容区域样式 */
.main-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 卡片通用样式 */
.card {
  background-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.37);
}

.card-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.icon-circle {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(to right, #4bc0c0, #36a2eb);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.card-body {
  padding: 30rpx;
}

/* 分析结果样式 */
.analysis-title {
  font-size: 36rpx;
  color: var(--accent-light);
  margin-bottom: 20rpx;
  display: block;
}

.analysis-content {
  white-space: pre-wrap;
  line-height: 1.8;
  color: var(--text-light);
}

/* 加载动画 */
.loader {
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top: 8rpx solid var(--highlight-blue);
  width: 60rpx;
  height: 60rpx;
  animation: spin 1s linear infinite;
  margin: 40rpx auto;
}

.loader-small {
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top: 4rpx solid var(--highlight-blue);
  width: 30rpx;
  height: 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 数据表格样式 */
.table-container {
  width: 100%;
  overflow-x: scroll;
}

.data-table {
  width: 100%;
  min-width: 750rpx;
  border-collapse: collapse;
}

.table-header {
  display: grid;
  grid-template-columns: 200rpx 300rpx repeat(3, 150rpx);
  background-color: rgba(42, 147, 213, 0.4);
}

.table-body {
  display: grid;
  grid-template-columns: 200rpx 300rpx repeat(3, 150rpx);
}

.th, .td {
  padding: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  text-align: left;
  font-size: 28rpx;
}

.th {
  font-weight: bold;
  color: white;
}

.tr {
  display: contents;
}

.tr:nth-child(even) {
  background-color: rgba(255, 255, 255, 0.05);
}

.tr:hover {
  background-color: rgba(42, 147, 213, 0.2);
}

/* 图表样式 */
.chart-tabs {
  display: flex;
  overflow-x: auto;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 20rpx;
}

.chart-tab {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  white-space: nowrap;
  color: rgba(255, 255, 255, 0.7);
  position: relative;
}

.chart-tab.active {
  border-bottom: 6rpx solid var(--highlight-blue);
  color: white;
}

.chart-panels {
  position: relative;
  min-height: 480rpx;
}

.chart-panel {
  width: 100%;
}

.chart-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30rpx;
}

@media screen and (min-width: 768rpx) {
  .chart-grid {
    grid-template-columns: 1fr 1fr;
  }
}

.dashboard-card {
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  transition: all 0.3s ease;
}

.dashboard-card:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
}

.chart-title {
  font-size: 28rpx;
  color: var(--accent-light);
  margin-bottom: 16rpx;
  display: block;
  text-align: center;
}

ec-canvas {
  width: 100%;
  height: 300rpx;
}

/* 聊天区域样式 */
.chat-container {
  background-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx 0 rgba(0, 0, 0, 0.37);
  margin-bottom: 30rpx;
}

.chat-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.chat-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.chat-history {
  height: 600rpx;
  padding: 20rpx;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.message-item {
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-avatar {
  background-color: var(--highlight-blue);
}

.ai-avatar {
  background-color: #4bc0c0;
}

.message-bubble {
  max-width: 80%;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  margin-left: 16rpx;
  line-height: 1.5;
  font-size: 28rpx;
}

.user-message {
  background-color: rgba(42, 147, 213, 0.5);
  color: white;
}

.ai-message {
  background-color: rgba(0, 0, 0, 0.2);
  color: var(--text-light);
}

.thinking-indicator {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.thinking-text {
  font-size: 24rpx;
  color: var(--accent-light);
  margin-left: 8rpx;
}

.chat-input-area {
  padding: 20rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.chat-input {
  flex: 1;
  background-color: rgba(0, 0, 0, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 16rpx;
  color: white;
  font-size: 28rpx;
}

.send-btn {
  width: 64rpx;
  height: 64rpx;
  background-color: var(--highlight-blue);
  border-radius: 16rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 工具类 */
.mb-4 {
  margin-bottom: 16rpx;
}

.hidden {
  display: none !important;
}

.fade-in {
  animation: fadeIn 0.8s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
