page {
  background-color: #0a1929;
  color: #e6f1ff;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #e6f1ff;
}

.back-button {
  display: inline-block;
  padding: 15rpx 30rpx;
  background-color: #1e40af;
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  transition: background-color 0.3s;
}

.back-button:active {
  background-color: #1e3a8a;
}

.card {
  background-color: #0d2546;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #e6f1ff;
  margin-bottom: 25rpx;
  display: block;
}

/* 按钮样式 */
.btn-group {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.btn {
  padding: 15rpx 30rpx;
  background-color: #1e40af;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  transition: background-color 0.3s;
}

.btn.active {
  background-color: #3b82f6;
  box-shadow: 0 0 10rpx rgba(59, 130, 246, 0.5);
}

.btn:active {
  background-color: #1e3a8a;
}

/* 过滤器样式 */
.filter-group {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
}

@media screen and (min-width: 768rpx) {
  .filter-group {
    grid-template-columns: repeat(3, 1fr);
  }
}

.filter-item {
  display: flex;
  flex-direction: column;
}

.filter-item .label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #9ca3af;
}

.filter-item .picker {
  background-color: #1e3a8a;
  border: 1rpx solid #3b82f6;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  color: white;
}

/* 表格样式 */
.table {
  width: 100%;
  border-collapse: collapse;
  overflow-x: auto;
  display: block;
  white-space: nowrap;
}

.tr {
  display: flex;
  border-bottom: 1rpx solid #1e3a8a;
}

.tr:nth-child(odd) {
  background-color: #0f2c56;
}

.tr:nth-child(even) {
  background-color: #0d2546;
}

.th {
  background-color: #1e3a8a;
  color: white;
  font-weight: bold;
}

.td {
  padding: 15rpx 20rpx;
  flex: 1;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 100rpx;
}

.price-up {
  color: #f87171;
}

.price-down {
  color: #4ade80;
}

/* 图表容器 */
.chart-container {
  width: 100%;
  height: 600rpx;
  margin: 20rpx 0;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
}

.product-spec {
  font-size: 24rpx;
  color: #9ca3af;
  margin-left: 10rpx;
}

.time-filter {
  display: flex;
  gap: 10rpx;
}

.time-filter .btn {
  padding: 10rpx 25rpx;
  font-size: 24rpx;
}

/* 分析框样式 */
.analysis-box {
  background-color: rgba(30, 64, 175, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.analysis-title {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.analysis-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #e6f1ff;
  display: block;
}

.highlight {
  color: #38bdf8;
  font-weight: bold;
}

.analysis-list {
  margin: 15rpx 0;
}

.analysis-item {
  font-size: 28rpx;
  line-height: 1.6;
  color: #e6f1ff;
  margin: 5rpx 0;
  padding-left: 10rpx;
}

.analysis-conclusion {
  font-size: 28rpx;
  color: #e6f1ff;
  display: block;
  margin-top: 10rpx;
}

/* 标签容器 */
.tab-container {
  display: flex;
  border-bottom: 1rpx solid #1e3a8a;
  margin-bottom: 30rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.tab {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  cursor: pointer;
  transition: background-color 0.3s, color 0.3s;
}

.tab.active {
  background-color: #1e40af;
  color: white;
  border-bottom: 4rpx solid #3b82f6;
}

/* 双列布局 */
.dual-column {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30rpx;
}

@media screen and (min-width: 768rpx) {
  .dual-column {
    grid-template-columns: repeat(2, 1fr);
  }
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e6f1ff;
  margin-bottom: 20rpx;
  display: block;
}

.analysis-section {
  padding-top: 10rpx;
}

.analysis-intro {
  font-size: 28rpx;
  color: #e6f1ff;
  margin-bottom: 15rpx;
  display: block;
}

.platform-analysis {
  margin: 20rpx 0;
}

.platform-item {
  display: flex;
  margin-bottom: 15rpx;
}

.dot {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.dot.yellow {
  background-color: #f59e0b;
}

.dot.blue {
  background-color: #3b82f6;
}

.dot.green {
  background-color: #10b981;
}

.platform-name {
  font-weight: bold;
}

.strategy-box {
  margin-top: 20rpx;
  background-color: rgba(16, 185, 129, 0.1);
  border-radius: 10rpx;
  padding: 15rpx;
}

.strategy-title {
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.strategy-content {
  font-size: 26rpx;
  line-height: 1.5;
}

/* 时间推荐网格 */
.timing-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20rpx;
  margin-top: 30rpx;
}

@media screen and (min-width: 768rpx) {
  .timing-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.timing-item {
  background-color: rgba(30, 64, 175, 0.2);
  border-radius: 12rpx;
  padding: 20rpx;
}

.timing-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.timing-text {
  font-size: 26rpx;
  color: #e6f1ff;
  margin-bottom: 10rpx;
  display: block;
}

.timing-list {
  margin-top: 10rpx;
}

.timing-list-item {
  font-size: 26rpx;
  line-height: 1.5;
  color: #e6f1ff;
}

/* 库存与物流 */
.left-column, .right-column {
  margin-bottom: 20rpx;
}

.recommendation-box {
  margin-top: 20rpx;
  background-color: rgba(30, 64, 175, 0.2);
  border-radius: 10rpx;
  padding: 15rpx;
}

.recommendation-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.recommendation-content {
  font-size: 26rpx;
  line-height: 1.5;
  color: #e6f1ff;
}

.region-analysis {
  margin-bottom: 20rpx;
}

.region-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  background-color: rgba(30, 64, 175, 0.1);
  padding: 15rpx;
  border-radius: 8rpx;
}

.region-name {
  flex: 1;
}

.progress-bar {
  width: 50%;
  background-color: #374151;
  border-radius: 10rpx;
  height: 15rpx;
}

.progress-fill {
  background-color: #3b82f6;
  border-radius: 10rpx;
  height: 15rpx;
}

.region-percent {
  width: 80rpx;
  text-align: right;
  font-weight: bold;
  margin-left: 10rpx;
}

.footer {
  text-align: center;
  margin-top: 40rpx;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #9ca3af;
}

.footer text {
  display: block;
  margin: 8rpx 0;
}
